{
    "name": "doenet-vscode-extension",
    "displayName": "DoenetML support",
    "description": "A language server for DoenetML",
    "author": "Jason Siefken",
    "license": "AGPL",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Doenet/DoenetML"
    },
    "categories": [],
    "keywords": [
        "Doenet DoenetML"
    ],
    "engines": {
        "vscode": "^1.76.0"
    },
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "doenet",
                "aliases": [
                    "Doenet",
                    "doenet",
                    "DoenetML"
                ],
                "extensions": [
                    ".doenet"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "doenet",
                "scopeName": "text.doenet",
                "path": "./syntaxes/doenet.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "build": "npm run compile",
        "compile": "cd ./client && tsc -b && cd ../server && vite build",
        "watch": "npm run build && cd ./server && vite build --watch",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "echo \"No CI tests. You can use `npm run e2e-test` to run the end-to-end tests (requires a display)\" && exit 0",
        "e2e-test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^20.8.6",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "eslint": "^8.51.0",
        "mocha": "^9.2.1",
        "typescript": "^5.2.2"
    }
}
