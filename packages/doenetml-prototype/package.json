{
    "name": "@doenet/doenetml-prototype",
    "type": "module",
    "description": "Prototype for semantic markup for building interactive web activities",
    "version": "0.9.0-alpha1",
    "license": "AGPL-3.0-or-later",
    "homepage": "https://github.com/Doenet/DoenetML#readme",
    "private": false,
    "repository": "github:Doenet/DoenetML",
    "files": [
        "/dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "wireit",
        "preview": "vite preview",
        "test:before": "npm run build:test2",
        "build:test1": "wireit",
        "build:test2": "wireit",
        "test": "npm run build:test1 && vitest",
        "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0"
    },
    "wireit": {
        "build:test1": {
            "command": "cd test/utils && vite build -c vite.dast-to-flat-dast.config.ts",
            "files": [
                "test/utils/dast-to-flat-dast.ts",
                "test/utils/vite.dast-to-flat-dast.config.ts"
            ],
            "output": [
                "test/utils/dist/dast-to-flat-dast/**/*.js"
            ],
            "dependencies": [
                "../doenetml-worker-rust:build",
                "../parser:build"
            ]
        },
        "build:test2": {
            "command": "cd test/utils && vite build -c vite.run.config.ts",
            "files": [
                "test/utils/run.ts",
                "test/utils/vite.run.config.ts"
            ],
            "output": [
                "test/utils/dist/run/**/*.js"
            ],
            "dependencies": [
                "build:test1"
            ]
        },
        "build": {
            "command": "vite build",
            "files": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "src/**/*.css",
                "tsconfig.json",
                "vite.config.ts"
            ],
            "output": [
                "dist/**/*.js",
                "dist/**/*.d.ts",
                "dist/**/*.json"
            ],
            "dependencies": [
                "../doenetml-worker-rust:build",
                "../parser:build",
                "../codemirror:build"
            ]
        }
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.23.2",
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
        "@types/react": "^18.2.31",
        "@types/react-dom": "^18.2.14",
        "@vitejs/plugin-react": "^4.1.0",
        "@vitest/browser": "^1.6.0",
        "cypress": "^12.13.0",
        "cypress-parallel": "^0.13.0",
        "cypress-plugin-tab": "^1.0.5",
        "cypress-wait-until": "^1.7.2",
        "eslint": "^8.52.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.5",
        "prettier": "^3.3.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "vite": "^5.3.3"
    },
    "prettier": {
        "tabWidth": 4
    }
}
