{
    "name": "@doenet/lsp-tools",
    "type": "module",
    "description": "Tools needed by the language server for DoenetML",
    "version": "1.0.0",
    "license": "AGPL-3.0-or-later",
    "homepage": "https://github.com/Doenet/DoenetML#readme",
    "private": false,
    "repository": "github:Doenet/DoenetML",
    "files": [
        "/dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "dev": "vite",
        "watch": "vite build --watch",
        "build": "wireit",
        "test": "vitest",
        "compile_grammar": "npx lezer-generator --output src/generated-assets/lezer-doenet.ts src/doenet.grammar"
    },
    "wireit": {
        "build": {
            "command": "vite build",
            "files": [
                "src/**/*.ts",
                "tsconfig.json",
                "vite.config.ts"
            ],
            "output": [
                "dist/**/*.js",
                "dist/**/*.d.ts",
                "dist/**/*.json"
            ],
            "dependencies": [
                "../static-assets:build",
                "../parser:build"
            ]
        }
    },
    "devDependencies": {},
    "dependencies": {
        "mdast-util-to-markdown": "^2.1.0",
        "mdast-util-to-string": "^4.0.0"
    }
}
