{
    "name": "@doenet/doenetml-worker-rust",
    "type": "module",
    "description": "Repo for compiled WebWorker code for DoenetML",
    "version": "*",
    "license": "AGPL-3.0-or-later",
    "homepage": "https://github.com/Doenet/DoenetML#readme",
    "private": false,
    "repository": "github:Doenet/DoenetML",
    "files": [
        "/dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.js"
        },
        "./*": {
            "import": "./dist/*",
            "require": "./dist/*"
        }
    },
    "scripts": {
        "watch": "vite build --watch",
        "test": "echo \"No tests \"",
        "build:rust": "wireit",
        "build:js": "wireit",
        "build": "npm run build:rust && npm run build:js"
    },
    "wireit": {
        "build:js": {
            "command": "vite build",
            "files": [
                "src/**/*.ts",
                "src/**/*.js",
                "tsconfig.json",
                "vite.config.ts"
            ],
            "output": [
                "dist/**/*.js",
                "dist/**/*.d.ts",
                "dist/**/*.json"
            ],
            "dependencies": [
                "../utils:build",
                "../parser:build",
                "build:rust"
            ]
        },
        "build:rust": {
            "command": "npx wasm-pack build --target web --dev --features 'web-logging web-debug-log'",
            "files": [
                "src/**/*.ts",
                "src/**/*.rs",
                "doenetml-core/**/*.rs",
                "**/*/Cargo.toml"
            ],
            "output": [
                "pkg/**/*.js",
                "pkg/**/*.d.ts",
                "pkg/**/*.wasm",
                "pkg/**/*.json"
            ]
        }
    },
    "dependencies": {},
    "devDependencies": {
        "node-stdlib-browser": "^1.2.0",
        "rollup-plugin-polyfill-node": "^0.12.0",
        "vite": "^4.5.0",
        "vite-plugin-static-copy": "^0.17.0"
    }
}
